<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_menu_height"
    android:background="@color/bottom_menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_menu_lin1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_menu_img1"
                android:layout_width="@dimen/bottom_menu_img_size"
                android:layout_height="@dimen/bottom_menu_img_size"
                android:background="@mipmap/menu_healthy_selected" />

            <TextView
                android:id="@+id/bottom_menu_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_bottom_menu_healthy"
                android:textColor="@color/bottom_color_on"
                android:textSize="@dimen/bottom_menu_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_menu_lin2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/bottom_menu_img2"
                android:layout_width="@dimen/bottom_menu_img_size"
                android:layout_height="@dimen/bottom_menu_img_size"
                android:background="@mipmap/menu_sport_unselected"
                android:icon="@drawable/menu_healthy_sl" />

            <TextView
                android:id="@+id/bottom_menu_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_bottom_menu_sports"
                android:textColor="@color/bottom_color_off"
                android:textSize="@dimen/bottom_menu_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_menu_lin3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_menu_img3"
                android:layout_width="@dimen/bottom_menu_img_size"
                android:layout_height="@dimen/bottom_menu_img_size"
                android:background="@mipmap/menu_device_unselected" />

            <TextView
                android:id="@+id/bottom_menu_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_bottom_menu_device"
                android:textColor="@color/bottom_color_off"
                android:textSize="@dimen/bottom_menu_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_menu_lin4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_menu_img4"
                android:layout_width="@dimen/bottom_menu_img_size"
                android:layout_height="@dimen/bottom_menu_img_size"
                android:background="@mipmap/menu_me_unselected" />

            <TextView
                android:id="@+id/bottom_menu_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_bottom_menu_me"
                android:textColor="@color/bottom_color_off"
                android:textSize="@dimen/bottom_menu_text_size" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
