<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/public_bg"
    android:minHeight="150dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivivHealthyItemTop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@mipmap/healthy_item_calories" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHealthyItemTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:text="@string/healthy_sports_calories"
        android:textColor="@color/color_171717"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivivHealthyItemTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivivHealthyItemTop"
        app:layout_constraintTop_toTopOf="@+id/ivivHealthyItemTop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/healthyItemSportType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_878787"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/healthyItemCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvHealthyItemTop"
        app:layout_constraintTop_toBottomOf="@+id/tvHealthyItemTop"
        tools:text="户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步户外跑步"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/healthyItemCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/healthy_sports_calories"
        android:textColor="@color/color_171717"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/healthyItemBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivivHealthyItemTop"
        app:layout_constraintTop_toBottomOf="@+id/healthyItemSportType" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/healthyItemBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/healthy_sports_calories"
        android:textColor="@color/color_878787"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivivHealthyItemTop"
        app:layout_constraintTop_toBottomOf="@+id/healthyItemCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>